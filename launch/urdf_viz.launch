<?xml version="1.0" encoding="UTF-8"?>

<!-- USE: roslaunch lift_arm_description urdf_viz.launch -->

<launch>

  <arg name="model" default="$(find lift_arm_description)/urdf/manipulator.xacro"/>


  <param name="robot_description" command="$(find xacro)/xacro '$(find lift-arm-description)/urdf/manipulator.urdf.xacro'" />

  <!-- Send fake joint values -->
  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>

  <!-- Combine joint values -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Show in Rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find lift_arm_description)/rviz_config/urdf.rviz"/>
  <!--<node name="rviz" pkg="rviz" type="rviz" args=""/>-->

</launch>
